{
  "name": "OpenSenseMapAPI",
  "version": "0.0.1",
  "description": "API for opensensemap.org",
  "main": "app.js",
  "engines": {
  	"node": ">=0.10.0"
  },
  "dependencies": {
    "bunyan": "^1.3.3",
    "geojson": "^0.2.0",
    "lodash": "^3.1.0",
    "mongoose": "~4.1.0",
    "mongoose-timestamp": "^0.2.1",
    "restify": "^2.6.1",
    "json2csv": "~2.2.1",
    "nodemailer": "~1.4.0",
    "nodemailer-smtp-transport": "~1.0.3",
    "nodemailer-html-to-text": "~1.0.2"
  },
  "devDependencies": {
    "apidoc": "^0.13.1",
    "nodemon": "^1.8.0",
    "snazzy": "^2.0.1",
    "standard": "^5.3.1"
  },
  "standard": {
    "ignore": [
      "doc/"
    ]
  },
  "scripts": {
    "docs": "apidoc -e node_modules/",
    "start": "nodemon app.js",
    "test": "standard --verbose | snazzy",
    "db-local": "mongod --dbpath db",
    "watch-local": "npm run db-local & (sleep 1 && nodemon app.js)"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sensebox/OpenSenseMap-API.git"
  },
  "author": "Matthias Pfeil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sensebox/OpenSenseMap-API/issues"
  },
  "homepage": "https://github.com/mpfeil/OpenSenseMap-API",
  "apidoc": {
    "name": "OpenSenseMap API documentation",
    "version": "0.0.1",
    "description": "Documentation for OpenSenseMap to register and administer SenseBoxes",
    "title": "OpenSenseMap API docs title",
    "url": "http://opensensemap.org:8000"
  }
}
